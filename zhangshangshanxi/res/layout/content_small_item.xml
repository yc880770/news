<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FCFFFF"
            >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_small_image"
                android:layout_weight="3">
        </ImageView>
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/content_small_title"
                   android:textColor="#000000"></TextView>
            <TextView
                    android:drawableLeft="@drawable/clock_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_small_time"
                    android:textColor="#0F0000"></TextView>
            <TextView
                    android:drawableLeft="@drawable/event_location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_small_location"
                    android:textColor="#0F0000"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>