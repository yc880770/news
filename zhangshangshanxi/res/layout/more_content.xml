<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/comment_bg"
              android:padding="5dp"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 账户信息"
                android:textColor="#A0A1A1"
                android:padding="5dp">

        </TextView>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grouped_item_bg"
                android:orientation="horizontal"
                android:gravity="left"
                android:text="  新浪微博(未绑定)            "
                android:drawableLeft="@drawable/sina_wei_bo_icon"
                android:drawableRight="@drawable/show_next_item"
                android:textSize="16dp"
                android:padding="10dp">
        </Button>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 我的反馈"
                android:textColor="#A0A1A1"
                android:padding="5dp">
        </TextView>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grouped_item_bg"
                android:orientation="horizontal"
                android:gravity="left"
                android:text="  意见反馈            "
                android:drawableLeft="@drawable/feedback_icon"
                android:drawableRight="@drawable/show_next_item"
                android:textSize="16dp"
                android:padding="10dp">
        </Button>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 我的设置"
                android:textColor="#A0A1A1"
                android:padding="5dp">
        </TextView>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grouped_item_bg"
                android:orientation="horizontal"
                android:gravity="left"
                android:text="  清理缓存            "
                android:drawableLeft="@drawable/clean_cache_icon"
                android:drawableRight="@drawable/show_next_item"
                android:textSize="16dp"
                android:padding="10dp">
        </Button>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本应用支持自动定期清理缓存"
                android:textSize="10dp"
                android:gravity="right">

        </TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 我的设置"
                android:textColor="#A0A1A1"
                android:padding="5dp">
        </TextView>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grouped_item_top_bg"
                android:orientation="horizontal"
                android:gravity="left"
                android:text="  检查更新(当前版本:1.1.0)       "
                android:drawableLeft="@drawable/check_for_update"
                android:drawableRight="@drawable/show_next_item"
                android:textSize="16dp"
                android:padding="10dp">
        </Button>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grouped_item_bottom_bg"
                android:orientation="horizontal"
                android:gravity="left"
                android:text="  关于            "
                android:drawableLeft="@drawable/about_us_icon"
                android:drawableRight="@drawable/show_next_item"
                android:textSize="16dp"
                android:padding="10dp">
        </Button>
    </LinearLayout>
</LinearLayout>